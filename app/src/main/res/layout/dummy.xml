<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/quote_back_ground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="right"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:padding="5dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="22dp"
                        android:padding="5dp"
                        android:backgroundTint="@color/LightGrey"
                        app:cardCornerRadius="2dp"
                        android:layout_height="22dp">
                        <ImageView
                            android:layout_width="16sp"
                            android:id="@+id/share"
                            android:layout_height="16sp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_share" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:padding="5dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="22dp"
                        android:padding="5dp"
                        android:backgroundTint="@color/LightGrey"
                        app:cardCornerRadius="2dp"
                        android:layout_height="22dp">
                        <ImageView
                            android:layout_width="16sp"
                            android:layout_height="16sp"
                            android:id="@+id/copy"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_copy" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:padding="5dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="22dp"
                        android:padding="5dp"
                        app:cardCornerRadius="2dp"
                        android:backgroundTint="@color/LightGrey"
                        android:layout_height="22dp">

                        <ImageView
                            android:layout_width="16sp"
                            android:layout_height="16sp"
                            android:id="@+id/download"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_download" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:padding="5dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="22dp"
                        android:padding="5dp"
                        app:cardCornerRadius="2dp"
                        android:backgroundTint="@color/LightGrey"
                        android:layout_height="22dp">

                        <ImageView
                            android:id="@+id/not_favourite"
                            android:layout_width="16sp"
                            android:layout_height="16sp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_heart" />

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:visibility="gone"
                            android:id="@+id/fav"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_filledheart" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/quote_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:text="“I'm selfish, impatient and a little insecure. I make mistakes, I am out of control and at times hard to handle. But if you can't handle me at my worst, then you sure as hell don't deserve me at my best.”"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>