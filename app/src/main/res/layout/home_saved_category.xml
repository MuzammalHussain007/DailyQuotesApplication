<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        android:background="@color/CadetBlue">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="3dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/crown"
                        android:visibility="gone"
                        android:src="@drawable/crown" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="3dp"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/not_fav"
                        android:src="@drawable/ic_heart" />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:visibility="gone"
                        android:id="@+id/favourite"
                        android:src="@drawable/ic_filledheart" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>


            <TextView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="fjdkskjdxzjlk"
                android:background="@drawable/circle_shape"
                android:textAlignment="center"
                android:textSize="16sp"
                android:gravity="center"
                android:backgroundTint="@color/AliceBlue"
                android:id="@+id/first_letter"
                android:textColor="@color/black"
                android:textStyle="bold"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/category_name"
                android:backgroundTint="@color/CadetBlue"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:text="Catagory Name"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>